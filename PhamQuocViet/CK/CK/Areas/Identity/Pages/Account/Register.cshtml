@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<style>
    /* Đặt nền gradient cho toàn bộ trang */
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        height: 100vh;
        overflow-x: hidden; /* Tránh thanh cuộn ngang */
    }

    /* Style cho khung Card */
    .card-register {
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        border: none;
    }

    /* Style cho nút bấm Gradient */
    .btn-custom {
        background-image: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
        border: none;
        color: white;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            transform: translateY(-2px); /* Hiệu ứng nổi lên nhẹ khi di chuột */
            box-shadow: 0 5px 15px rgba(37, 117, 252, 0.4);
            color: white;
        }

    /* Link quay về trang chủ */
    .home-link {
        color: rgba(255,255,255,0.8);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

        .home-link:hover {
            color: white;
        }
</style>

<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-6 col-lg-5">

            <div class="mb-3 text-center text-md-start">
                <a href="/" class="home-link">
                    &larr; Quay về Trang chủ
                </a>
            </div>

            <div class="card card-register p-4 bg-white animate__animated animate__fadeInUp">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">TẠO TÀI KHOẢN</h2>
                    <p class="text-muted small">Tham gia hệ thống tuyển dụng CK ngay hôm nay</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center small"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com"
                               data-bs-toggle="tooltip" data-bs-placement="right" title="Email dùng để đăng nhập và nhận thông báo tuyển dụng" />
                        <label asp-for="Input.Email">Địa chỉ Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password"
                               data-bs-toggle="tooltip" data-bs-placement="right" title="Mật khẩu nên có chữ hoa, thường, số và ký tự đặc biệt" />
                        <label asp-for="Input.Password">Mật khẩu</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Password"
                               data-bs-toggle="tooltip" data-bs-placement="right" title="Nhập lại chính xác mật khẩu bên trên" />
                        <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button id="registerSubmit" type="submit" class="btn btn-custom btn-lg py-3">ĐĂNG KÝ NGAY</button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="mb-0 text-muted">Bạn đã có tài khoản?</p>
                        <a asp-page="./Login" class="text-primary fw-bold text-decoration-none">Đăng nhập tại đây</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Sử dụng DOMContentLoaded để đảm bảo trang tải xong mới chạy Script
        document.addEventListener("DOMContentLoaded", function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}