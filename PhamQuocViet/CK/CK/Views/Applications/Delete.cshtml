@model CK.Models.JobApplication

@{
    ViewData["Title"] = "Xóa hồ sơ ứng viên";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div>
                    <strong>Cảnh báo:</strong> Bạn sắp xóa vĩnh viễn hồ sơ này. Hành động này không thể khôi phục!
                </div>
            </div>

            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 fw-bold">🗑️ Xác nhận xóa hồ sơ</h4>
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Vị trí ứng tuyển:</dt>
                        <dd class="col-sm-8">
                            <h5 class="fw-bold text-primary">@(Model.Job?.Title ?? "Công việc đã bị xóa")</h5>
                        </dd>

                        <dt class="col-sm-4 text-muted">Tài khoản nộp:</dt>
                        <dd class="col-sm-8">@Model.UserId</dd>

                        <dt class="col-sm-4 text-muted">CV đính kèm:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.CVPatch))
                            {
                                <a href="~/cvs/@Model.CVPatch" target="_blank" class="text-decoration-none">
                                    📄 @Model.CVPatch
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không có file</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">⏳ Đang chờ duyệt</span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success">✅ Đã chấp nhận</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">❌ Đã từ chối</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Ngày nộp:</dt>
                        <dd class="col-sm-8">@Model.AppliedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="Id" />

                        <a asp-action="Index" class="btn btn-secondary">
                            Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-danger fw-bold">
                            ❌ Xóa vĩnh viễn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>