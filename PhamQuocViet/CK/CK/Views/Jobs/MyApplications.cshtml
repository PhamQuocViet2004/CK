@model IEnumerable<CK.Models.JobApplication>

@{
    ViewData["Title"] = "Lịch sử ứng tuyển";
}

<div class="container mt-4">
    <h2>Lịch sử nộp hồ sơ của bạn</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Bạn chưa ứng tuyển công việc nào. <a asp-action="Index">Tìm việc ngay!</a>
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Công việc</th>
                    <th>Ngày nộp</th>
                    <th>Trạng thái</th>
                    <th>CV đã nộp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Job?.Title</strong></td>
                        <td>@item.AppliedDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (item.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            }
                            else if (item.Status == "Approved")
                            {

                                <span class="badge bg-success">Đã duyệt</span>
                            }
                            else
                            {

                                <span class="badge bg-danger">Từ chối</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.CVPatch))
                            {
                                <a href="~/cvs/@item.CVPatch" target="_blank">Xem file</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>