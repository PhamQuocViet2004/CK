@model CK.Models.Job

@{
    ViewData["Title"] = "Xóa tin tuyển dụng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div>
                    <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Bạn có chắc chắn muốn xóa tin này không?
                </div>
            </div>

            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 fw-bold">🗑️ Xác nhận xóa tin tuyển dụng</h4>
                </div>
                <div class="card-body">
                    <h2 class="text-primary mb-3">@Model.Title</h2>

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Mức lương:</dt>
                        <dd class="col-sm-8 fw-bold text-success">@Model.Salary.ToString("N0") VND</dd>

                        <dt class="col-sm-4 text-muted">Địa điểm:</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 text-muted">Ngày đăng:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Đang hiển thị</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Đang ẩn</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Mô tả ngắn:</dt>
                        <dd class="col-sm-8 text-truncate">@Model.Description</dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="Id" />

                        <a asp-action="Index" class="btn btn-secondary">
                            Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-danger fw-bold">
                            ❌ Xóa vĩnh viễn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>