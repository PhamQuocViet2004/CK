@model CK.Models.Job

@{
    ViewData["Title"] = "Đăng tin tuyển dụng mới";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 fw-bold">📝 Đăng tin tuyển dụng mới</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Ví dụ: Lập trình viên Backend .NET" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Salary" class="control-label fw-bold"></label>
                                <input asp-for="Salary" class="form-control" type="number" placeholder="Nhập số tiền..." />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Location" class="control-label fw-bold"></label>
                                <input asp-for="Location" class="form-control" placeholder="Ví dụ: Hà Nội / Hồ Chí Minh" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Mô tả chi tiết về công việc..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Requirements" class="control-label fw-bold"></label>
                            <textarea asp-for="Requirements" class="form-control" rows="5" placeholder="Kỹ năng yêu cầu, kinh nghiệm..."></textarea>
                            <span asp-validation-for="Requirements" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-4 bg-light p-2 rounded border">
                            <label class="form-check-label text-dark">
                                <input class="form-check-input" asp-for="IsActive" checked />
                                <strong>Hiển thị tin này ngay sau khi đăng</strong>
                            </label>
                        </div>

                        <div class="form-group d-flex gap-2">
                            <input type="submit" value="✅ Đăng tin ngay" class="btn btn-success fw-bold px-4" />
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}