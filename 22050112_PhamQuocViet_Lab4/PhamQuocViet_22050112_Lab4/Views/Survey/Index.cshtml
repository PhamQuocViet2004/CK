@model Lab4.Models.Survey
@{
    ViewBag.Title = "Biểu mẫu khảo sát ITviec";
}

<style>
    body {
        background-color: #e0f7fa;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .survey-container {
        width: 420px;
        margin: 40px auto;
        background-color: white;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    h2 {
        text-align: center;
        color: #00796b;
        margin-bottom: 25px;
    }

    label {
        font-weight: 600;
        display: block;
        margin-top: 12px;
        color: #004d40;
    }

    input[type="text"],
    input[type="email"],
    input[type="number"],
    select,
    textarea {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid #b2dfdb;
        border-radius: 6px;
        margin-top: 5px;
        font-size: 14px;
        box-sizing: border-box;
    }

    textarea {
        height: 70px;
        resize: none;
    }

    .radio-group,
    .checkbox-group {
        margin-top: 5px;
        margin-left: 10px;
    }

        .radio-group label,
        .checkbox-group label {
            display: block;
            font-weight: 400;
        }

    .btn-submit {
        width: 100%;
        margin-top: 20px;
        padding: 10px;
        border: none;
        border-radius: 6px;
        background-color: #00796b;
        color: white;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-submit:hover {
            background-color: #00695c;
            cursor: pointer;
        }

    .validation-error {
        color: red;
        font-size: 13px;
    }
</style>

<div class="survey-container">
    <h2>Biểu mẫu khảo sát ITviec</h2>

    @using (Html.BeginForm())
    {
        <label>Họ tên</label>
        @Html.TextBoxFor(m => m.FullName, new { placeholder = "Nhập tên của bạn" })
        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "validation-error" })

        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Nhập email của bạn" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-error" })

        <label>Tuổi</label>
        @Html.TextBoxFor(m => m.Age, new { type = "number", placeholder = "Nhập tuổi" })
        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "validation-error" })

        <label>Hiện tại bạn đang là:</label>
        @Html.DropDownListFor(m => m.Occupation, new SelectList(new[] {
            "Học sinh/Sinh viên", "Nhân viên IT", "Người tìm việc", "Khác"
        }), "Chọn nghề nghiệp", new { })
        @Html.ValidationMessageFor(m => m.Occupation, "", new { @class = "validation-error" })

        <label>Bạn sẽ giới thiệu ITviec với bạn bè chứ?</label>
        <div class="radio-group">
            <label>@Html.RadioButtonFor(m => m.Recommend, "Có") Có</label>
            <label>@Html.RadioButtonFor(m => m.Recommend, "Không") Không</label>
            <label>@Html.RadioButtonFor(m => m.Recommend, "Có thể") Có thể</label>
        </div>
        @Html.ValidationMessageFor(m => m.Recommend, "", new { @class = "validation-error" })

        <label>Ngôn ngữ lập trình và Framework bạn đã biết?</label>
        <div class="checkbox-group">
            <label>@Html.CheckBox("KnownLanguages", false, new { value = "C" }) C</label>
            <label>@Html.CheckBox("KnownLanguages", false, new { value = "C++" }) C++</label>
            <label>@Html.CheckBox("KnownLanguages", false, new { value = "C#" }) C#</label>
        </div>
        @Html.ValidationMessageFor(m => m.KnownLanguages, "", new { @class = "validation-error" })

        <label>Bạn có câu hỏi gì cho ITviec không?</label>
        @Html.TextAreaFor(m => m.Comment, new { placeholder = "Nhập câu hỏi hoặc góp ý tại đây" })

        <button type="submit" class="btn-submit">Submit</button>
    }
</div>
