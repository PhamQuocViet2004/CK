@model Lab4.Models.Survey
@{
    ViewBag.Title = "Kết quả khảo sát ITviec";
}

<div style="width: 400px; margin: 20px auto; background-color: #e8f5e9; padding: 20px; border-radius: 10px; font-family: Arial;">
    <h2 style="text-align:center; color: #388e3c;">Kết quả khảo sát ITviec</h2>
    <p><strong>Họ tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Tuổi:</strong> @Model.Age</p>
    <p><strong>Nghề nghiệp:</strong> @Model.Occupation</p>
    <p><strong>Giới thiệu ITviec:</strong> @Model.Recommend</p>
    <p><strong>Ngôn ngữ đã biết:</strong> @string.Join(", ", (Model.KnownLanguages ?? new string[0]).Where(x => !string.IsNullOrWhiteSpace(x) && x.ToLower() != "false"))</p>
    <p><strong>Câu hỏi:</strong> @Model.Comment</p>

    <a href="@Url.Action("Index")" style="text-decoration:none; color:white; background-color:#00b050; padding:8px 16px; border-radius:5px;">Quay lại</a>
</div>
