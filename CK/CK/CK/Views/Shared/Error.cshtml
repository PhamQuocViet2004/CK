@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi hệ thống";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">

            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#dc3545" class="bi bi-exclamation-octagon-fill" viewBox="0 0 16 16">
                    <path d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
            </div>

            <h1 class="text-danger fw-bold">Rất tiếc, đã xảy ra lỗi!</h1>
            <p class="lead text-muted mt-3">
                Hệ thống gặp sự cố khi xử lý yêu cầu của bạn.
                <br />
                Vui lòng thử lại sau hoặc liên hệ với Quản trị viên.
            </p>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-warning d-inline-block mt-3 px-4 shadow-sm">
                    <strong>Mã kỹ thuật (Request ID):</strong>
                    <code class="ms-2 fw-bold text-dark">@Model.RequestId</code>
                </div>
                <p class="small text-muted mt-2">Hãy chụp màn hình mã lỗi này gửi cho bộ phận kỹ thuật.</p>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5 shadow rounded-pill">
                    &larr; Quay về Trang chủ
                </a>
            </div>

        </div>
    </div>
</div>