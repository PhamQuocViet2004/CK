@model IEnumerable<YourNamespace.Models.Student>
@{
    ViewBag.Title = "Danh sách học viên";
}

<h2>Danh sách học viên</h2>

<p>
    @Html.ActionLink("Thêm mới học viên", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã HV</th>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Học phí</th>
            <th>Ảnh</th>
            <th>Ghi chú</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentId</td>
                <td>@s.FullName</td>
                <td>@s.Gender</td>
                <td>@(s.DateOfBirth.HasValue ? s.DateOfBirth.Value.ToString("dd/MM/yyyy") : "")</td>
                <td>@s.TuitionFee.ToString("N0")</td>
                <td>
                    @if (!string.IsNullOrEmpty(s.ImageFileName))
                    {
                        <img src="@Url.Content("~/Content/StudentImages/" + s.ImageFileName)" style="width:100px;height:70px;object-fit:cover;" />
                    }
                </td>
                <td>@s.Notes</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = s.StudentId }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Xóa", "Delete", new { id = s.StudentId }, new { @class = "btn btn-danger btn-sm", style = "margin-left:5px;" })
                </td>
            </tr>
        }
    </tbody>
</table>
