@model IEnumerable<YourNamespace.Models.Product>

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm sản phẩm", "Create")
</p>

<table class="table table-bordered">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Unit</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.Unit</td>
            <td>@item.Price</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductId })

            </td>
        </tr>
    }
</table>
